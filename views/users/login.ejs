<% layout('layOut/layout') %>

<div class="container justify-content-center align-items-center mt-5">
    <div class="row">
        <div class="col-sm-10 offset-sm-1 col-md-6 offset-md-3 col-lg-4 offset-lg-4 col-xl-4 offset-xl-4">
            <div class="card shadow ">
                <img src="https://img.freepik.com/free-photo/tent-is-set-up-evening_1340-34136.jpg"  
                alt="" class="card-image-top img-fluid">
                
                <div class="card-body">
                    <h4 class="card-title">Log In</h4>
                    <form method="post" action="/login" class="needs-validation" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" id="username" name="username" autofocus required>
                            <div class="invalid-feedback">
                                Please enter your UserName.
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" id="password" name="password" required>
                            <div class="invalid-feedback">
                                Password Needed.
                            </div>
                        </div>
                        <button class="btn btn-success col-12">Log in</button>
                    </form>
                
                <div class="mt-3 text-center">
                    <p>
                        <a class="text-decoration-none" href="/register">Create new account</a>
                    </p>
                    
                </div>
                </div>
            </div>
            </div>
    </div>
</div>


    